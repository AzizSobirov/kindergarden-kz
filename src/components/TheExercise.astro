---
import App from "../App.astro";
import { Section, Accordion, Image, Icon, H1, H2, H3, H4 } from "ui";

interface Props {
  menu?: number;
  page: number;
  title: string;
  subtitle: string;
  next?: string;
}

const { menu = 1, page, title, subtitle, next = "#" } = Astro.props;
---

<App title={title}>
  <main>
    <!-- Intro -->
    <Section name="intro">
      <div class="breadcrumb">
        <ol class="breadcrumb-list">
          <li>
            <a href="/"><span>Баш</span></a>
          </li>
          <li>
            <a href="/exercises"><span>Күнегүләр</span></a>
          </li>
          <li>
            <a href="/exercises/5-6"><span>5 - 6 яшь</span></a>
          </li>
          <li class="active">
            <a href="#" class="disabled">
              <span>{title}</span>
            </a>
          </li>
        </ol>
      </div>

      <div class="page" class:list={[`page-${page}`]}>
        <div class="wrapper">
          <div class="aside">
            <div class="aside__section">
              <div class="aside__section-title">5 - 6 яшь</div>
              <Image src="page-2/section.png" />
            </div>

            <div class="aside__accordions" data-accordion="single">
              <Accordion title="Танып белү үсеше" active={menu == 0}>
                <ul
                  style="--primary: rgb(127, 90, 202);
                --primary-hover:rgba(191, 181, 211,0.5);
             --primary-light:rgba(191, 181, 211,0.3);"
                >
                  <li>
                    <a href="/exercises/communication/my-family">Минем гаиләм</a
                    >
                  </li>

                  <li>
                    <a href="/exercises/communication/homework">Өй эшләре </a>
                  </li>

                  <li>
                    <a href="/exercises/communication/polite-words"
                      >Әдәпле сүзләр</a
                    >
                  </li>
                </ul>
              </Accordion>

              <Accordion title="Танып белү үсеше" active={menu == 1}>
                <ul
                  style="--primary: rgb(254, 92, 148);
                --primary-hover:rgba(254, 92, 148,0.2);
             --primary-light:rgba(254, 92, 148,0.1);"
                >
                  <li>
                    <a href="/exercises/recognition/home">Туган җирем</a>
                  </li>

                  <li>
                    <a href="/exercises/recognition/creml">Казан-Башкалам</a>
                  </li>

                  <li>
                    <a href="/exercises/recognition/gerb-and-flag"
                      >Татарстанның символикасы</a
                    >
                  </li>

                  <li>
                    <a href="/exercises/awareness/metro">Метро станцияләре </a>
                  </li>

                  <li>
                    <a href="/exercises/logics/high-and-low">Югары һәм түбән</a>
                  </li>
            
                  <li><a href="/exercises/logics/extra-row">Өстәмә рәт</a></li>
                  <li><a href="/exercises/logics/losses">Югалтулар</a></li>
                  <li>
                    <a href="/exercises/logics/hard-and-soft">Каты һәм йомшак</a
                    >
                  </li>
                  <!-- <li><a href="#">Салкын Һәм кайнар</a></li> -->
                  <!-- <li><a href="#">Рәсемне җый</a></li> -->
                </ul>
              </Accordion>

              <!-- <Accordion title="Уку Һәм грамота" active={page == 3}>
                <ul
                  style="--primary:rgb(148, 136, 61);
                     --primary-hover:rgba(253, 233, 206,0.8);
                  --primary-light:rgba(253, 233, 206,0.4);"
                >
                  <li>
                    <a href="/exercises/grammar/purity-of-speech"
                      >Сөйләм сафлыгы</a
                    >
                  </li>
                  <li><a href="/exercises/grammar/alphabet">Әлифба</a></li>
                  <li>
                    <a href="/exercises/grammar/choose-a-letter"
                      >Хәрефне сайла</a
                    >
                  </li>
                  <li>
                    <a href="/exercises/grammar/work-with-letters"
                      >Хәрефләр белән эш</a
                    >
                  </li>
                </ul>
              </Accordion> -->

              <Accordion title="Сөйләм үсеше" active={menu == 2}>
                <ul
                  style="--primary:rgb(148, 136, 61);
                --primary-hover:rgba(253, 233, 206,0.8);
             --primary-light:rgba(253, 233, 206,0.4);"
                >
                  <li><a href="/exercises/speech/tell-story">Әкиятне сөйлә </a></li>
                  <li>
                    <a href="/exercises/speech/interesting-features"
                      >Кызыклы сыйфатлар</a
                    >
                  </li>
                  <li>
                    <a href="/exercises/grammar/choose-a-letter">Авазны сайла</a
                    >
                  </li>
                  <li><a href="/exercises/grammar/alphabet">Әлифба</a></li>
                  <li><a href="/exercises/grammar/purity-of-speech">Cөйләм
                    сафлыгы</a></li>
                </ul>
              </Accordion>

              <Accordion title="Сәнгати-эстетик үсеш" active={menu == 3}>
                <ul>
                  <li><a href="/exercises/artistic/draw">Рәсемне буяу</a></li>
                  <li>
                    <a href="/exercises/artistic/dressed">Татар милли киемнәр</a
                    >
                  </li>
                  <li>
                    <a href="/exercises/artistic/music">Халык музыкасы</a>
                  </li>
                  <li>
                    <a href="/exercises/artistic/dance">Күңелле биюләр</a>
                  </li>
                  <li>
                    <a href="/exercises/artistic/colors">Төсләрне өйрәнәбез</a>
                  </li>
                  <!-- <li><a href="#">Төсле һәм кара-ак</a></li> -->
                </ul>
              </Accordion>

              <Accordion title="Физик үсеш" active={menu == 4}>
                <ul
                  style="--primary:rgb(224, 191, 57);
                --primary-hover:rgba(255, 243, 197,0.8);
             --primary-light:rgba(255, 243, 197,0.4);"
                >
                  <li><a href="/exercises/physic/body">Тәннең төзелеше</a></li>
                  <li><a href="/exercises/physic/sport">Спорт биналары</a></li>
                  <li><a href="/exercises/physic/ball">Яңгыравыклы туп</a></li>
                </ul>
              </Accordion>

              <Accordion title="Санарга өйрәнәбез" active={menu == 5}>
                <ul
                  style="--primary:rgb(83, 172, 232);
                --primary-hover:rgba(210, 237, 255,0.8);
             --primary-light:rgba(210, 237, 255,0.4);"
                >
                  <li>
                    <a href="/exercises/numbers/sum">Хайваннарны саныйбыз</a
                    >
                  </li>
                  <!-- <li><a href="#">Күңелле исәп</a></li> -->
                  <li><a href="/exercises/numbers/howmuch">Предметларны саныйбыз</a></li>
                  <!-- <li><a href="#">1 - 3 саннарын өйрәнәбез</a></li> -->
                  <!-- <li><a href="#">5 кадәр саныйбыз </a></li> -->
                </ul>
              </Accordion>

              <Accordion title="Логопедик биремнәр" active={menu == 6}>
                <ul
                  style="--primary:rgb(255, 145, 77);
                --primary-hover:rgba(255, 145, 77,0.2);
             --primary-light:rgba(255, 145, 77,0.1);"
                >
                  <li><a href="/exercises/pronounce/ssound">Иҗекләрне кабатла - “C” авазы</a></li>
                  <li><a href="/exercises/pronounce/zsound">Бармагың белән үткәр - “З” авазы </a></li>
                  <li><a href="/exercises/pronounce/rsound"> Фонематик ишетү - “Р” авазы </a></li>
                </ul>
              </Accordion>
            </div>
          </div>

          <div class="content">
            <div class="content-title">Күнегү "{title}"</div>

            <div class="card">
              <div class="card-title" set:html={subtitle} />

              <slot />

              <a href={next} class="btn">Дәвам итәргә</a>
            </div>
          </div>

          <div class="result">
            <div class="result__level">
              <div class="result__level-title">Дәрәҗә</div>
              <div class="flex-row">
                <Image src="icons/star-filled.png" />
                <Image src="icons/star-empty.png" />
                <Image src="icons/star-empty.png" />
              </div>
            </div>

            <div class="result__actions">
              <Image src="icons/sound.svg" />
              <Image src="icons/play.png" />
            </div>

            <div class="result__table">
              <table>
                <tr>
                  <th colspan="2">Җаваплар</th>
                </tr>
                <tr>
                  <td><Image src="icons/correct.svg" /></td>
                  <td>1</td>
                </tr>
                <tr>
                  <td><Image src="icons/wrong.svg" /></td>
                  <td><span class="false">0</span></td>
                </tr>
              </table>
            </div>

            <Image class="result__image" src="aside.png" data-modal="form" />
          </div>
        </div>
      </div>
    </Section>
  </main>
</App>
