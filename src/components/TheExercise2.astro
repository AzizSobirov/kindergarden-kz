                  <th colspan="2">Җаваплар</th>
                </tr>
                <tr>
                  <td><Image src="icons/correct.svg" /></td>
                  <td>1</td>
                </tr>
                <tr>
                  <td><Image src="icons/wrong.svg" /></td>
                  <td><span class="false">0</span></td>
