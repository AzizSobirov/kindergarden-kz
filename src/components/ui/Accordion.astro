---
interface Props {
  title: string;
  icon?: string;
  active?: boolean;
}

const { active, title } = Astro.props;
---

<div class="accordion" class:list={{ active }}>
  <div class="accordion__header">
    <div class="accordion__header-title">{title}</div>
  </div>
  <div class="accordion__body">
    <div class="accordion__content">
      <slot />
    </div>
    <slot name="footer" />
  </div>
</div>
